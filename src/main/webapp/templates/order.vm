<!DOCTYPE html>
<html lang="en">
    #parse("head.vm")

  <body>

  <section id="container" class="">
      #parse("header.vm")
      #parse("side_bar_menu.vm")
      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
              <div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              实时订单
                          </header>
                          <table class="table table-striped table-advance table-hover">
                              <thead>
                              <tr>
                                  <th><i class="icon-bullhorn"></i> 收货人</th>
                                  <th class="hidden-phone"><i class="icon-question-sign"></i> 收货地址</th>
                                  <th class="hidden-phone"><i class="icon-question-sign"></i> 联系电话</th>
                                  <th><i class="icon-bookmark"></i> 订单总价</th>
                                  <th><i class=" icon-edit"></i> 下单时间</th>
                                  <th></th>
                              </tr>
                              </thead>
                              <tbody>
                              #foreach( ${info} in ${shopOrders})
                              <tr>
                                  <td><a href="#">${info.getName()}</a></td>
                                  <td class="hidden-phone">${info.getAddress()}</td>
                                  <td class="hidden-phone">${info.getPhone()}</td>
                                  <td>￥${info.getTotalPrice()}</td>
                                  #set($ctime = $!{info.getCtime()} * 1000)
                                  <td><span class="label label-warning label-mini">$!date.format('yyyy-MM-dd HH:mm:ss ',$!ctime)</span></td>
                                  <td>
                                      <button class="btn btn-info btn-xs" data-toggle="modal" data-target="#myModal"><i class="icon-file"></i> 查看详情</button>
                                      <button class="btn btn-success btn-xs"><i class="icon-ok"></i> 接单</button>
                                      <button class="btn btn-danger btn-xs"><i class="icon-trash "></i> 拒单</button>
                                  </td>
                              </tr>
                              #end
                              </tbody>
                          </table>
                      </section>
                  </div>
              </div>
              <!-- page end-->
          </section>
      </section>
      <!--main content end-->
  </section>

  <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
       aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" style="width: 1000px">
          <div class="modal-content" style="width: 1000px">
              <div class="modal-header" style="">
                  <button type="button" class="close"
                          data-dismiss="modal" aria-hidden="true">
                      &times;
                  </button>
                  <h4 class="modal-title" id="myModalLabel">
                      订单详情
                  </h4>
              </div>
              <div class="modal-body">
                  <div class="col-lg-12">
                      <section class="panel">
                          <table class="table table-striped table-advance table-hover" style="border-top: 1px solid; border-bottom:1px solid; border-top-color: inherit; border-bottom-color: inherit">
                              <thead>
                              <tr>
                                  <th width="20%"><i class="icon-bullhorn"></i> 标签</th>
                                  <th class="hidden-phone"><i class="icon-question-sign"></i> 内容</th>
                              </tr>
                              </thead>
                              <tbody>
                              <tr>
                                  <td><a href="#">蛋糕类型:</a></td>
                                  <td class="hidden-phone">慕斯蛋糕</td>
                              </tr>
                              <tr>
                                  <td><a href="#">蛋糕尺寸:</a></td>
                                  <td class="hidden-phone">27寸</td>
                              </tr>
                              <tr>
                                  <td><a href="#">蛋糕价格:</a></td>
                                  <td class="hidden-phone">45.5元</td>
                              </tr>
                              <tr>
                                  <td><a href="#">用户留言:</a></td>
                                  <td class="hidden-phone">我要一个很大很大的慕斯蛋糕</td>
                              </tr>
                              <tr>
                                  <td><a href="#">是否自提:</a></td>
                                  <td class="hidden-phone">否</td>
                              </tr>
                              <tr>
                                  <td><a href="#">交货时间:</a></td>
                                  <td class="hidden-phone">2017年02月07日</td>
                              </tr>
                              <tr>
                                  <td><a href="#">配送地址:</a></td>
                                  <td class="hidden-phone">北京市朝阳区望京东路4号。</td>
                              </tr>
                              <tr>
                                  <td><a href="#">联系方式:</a></td>
                                  <td class="hidden-phone">13312345678</td>
                              </tr>
                              </tbody>
                          </table>
                      </section>
                  </div>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-default"
                          data-dismiss="modal">关 闭
                  </button>
                  <button type="button" class="btn btn-primary">
                      接 单
                  </button>
              </div>
          </div><!-- /.modal-content -->
      </div><!-- /.modal -->

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.scrollTo.min.js"></script>
    <script src="js/jquery.nicescroll.js" type="text/javascript"></script>


    <!--common script for all pages-->
    <script src="js/common-scripts.js"></script>


  </body>
</html>
