                        }
//                        drawCart();
                },
                error: function() {


                }
            });
            $.ajax({
                url: "/orderTodaySaleInfo",
                dataType: "json",
                type: "get",
                success: function(res) {
                    $('.num').text(res[0].orderNum) ;
                    $('.price').text(res[0].totalPrice);
                }
            });
            $.ajax({
                url: "/goodsSaleInfo",
                dataType: "json",
                type: "get",
                success: function(res) {
                    console.log(res);
                        for(p in res){
                            pieData.push({value: res[p].saleNum, name: res[p].goodsName})
                        }
                    drawCart();

                },
                error: function() {


                }
            });
          function drawCart() {
              // 基于准备好的dom，初始化echarts实例
              var lineChart = echarts.init(document.getElementById('line-chart'));

              var colors = ['#293c55', '#d14a61', '#675bba'];

              // 指定图表的配置项和数据
              lineChartOption = {
                  color:colors,
                  tooltip: {
                      trigger: 'axis'
                  },
                  toolbox: {
                      feature: {
                          dataView: {show: true, readOnly: false},
                          magicType: {show: true, type: ['line', 'bar']},
                          restore: {show: true},
                          saveAsImage: {show: true}
                      }
                  },
                  legend: {
                      data:['订单量','交易额']
                  },
                  xAxis: [
                      {
                          type: 'category',
                          data: countDate
                      }
                  ],
                  yAxis: [
                      {
                          type: 'value',
                          name: '订单量',
                          min: 0,
                          max: 150,
                          interval: 16
                      }
                      ,
                      {
                          type: 'value',
                          name: '交易额',
                          min: 0,
                          max: 14000,
                          interval: 1000
                      }
                  ],
                  series: [
                      {
                          name:'订单量',
                          type:'bar',
                          data: countNum
                      },
                      {
                          name:'交易额',
                          type:'line',
                          yAxisIndex: 1,
                          data:countPrice
                      }
                  ]
              };

              // 使用刚指定的配置项和数据显示图表。
              lineChart.setOption(lineChartOption);

              var pieChart = echarts.init(document.getElementById('pie-chart'));
              pieChartOption = {
                  title : {
                      text: '各类蛋糕销售占比',
                      subtext: '近十日综合',
                      x:'center'
                  },
                  tooltip : {
                      trigger: 'item',
                      formatter: "{a} <br/>{b} : {c} ({d}%)"
                  },
//                  legend: {
//                      orient: 'vertical',
//                      left: 'left',
//                      data: ['巧克力蛋糕','冰淇淋蛋糕','鲜奶油蛋糕','水果蛋糕','慕斯蛋糕']
//                  },
                  series : [
                      {
                          name: '蛋糕销售量',
                          type: 'pie',
                          radius : '55%',
                          center: ['50%', '60%'],
                          data:pieData,
                          itemStyle: {
                              emphasis: {
                                  shadowBlur: 10,
                                  shadowOffsetX: 0,
                                  shadowColor: 'rgba(0, 0, 0, 0.5)'
                              }
                          }
                      }
                  ]
              };
              pieChart.setOption(pieChartOption);

              Morris.Donut({
                  element: 'hero-donut',
//                  data: [
//                      {label: '巧克力蛋糕', value: 25 },
//                      {label: '冰激凌蛋糕', value: 40 },
//                      {label: '鲜奶油蛋糕', value: 25 },
//                      {label: '水果蛋糕', value: 10 }
//                  ],
                  colors: ['#41cac0', '#49e2d7', '#34a39b'],
                  formatter: function (y) { return y + "%" }
              });
          }
        }
    </script>
